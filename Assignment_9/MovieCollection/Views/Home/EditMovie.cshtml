@{
    ViewData["Title"] = "Edit a Movie";
}

@model MovieCollectionViewModel

<h3 class="display-4 text-center">@ViewData["Title"]</h3>
<br />

<div class="container col-10 shadow-lg p-3 mb-5 rounded text-white" style="border: 3px solid black; background-color: #6c95e6">
    <form asp-action="UpdateMovie" method="post" class="pure-form pure-form-aligned text-center">
        <div>
            <div class="form-group">
                <input type="hidden" name="ID" value="@Model.Id" />
            </div>
            <div class="form-group row justify-content-center">
                <label asp-for="@Model.MovieMod.Category" class="col-sm-2 col-form-label text-center">Category</label>
                <input class="col-sm-3 form-control" placeholder="@Model.MovieMod.Category" asp-for="@Model.MovieMod.Category" type="text" />
                <span class="text-light pl-3" asp-validation-for="@Model.MovieMod.Category"></span>
            </div>
            <div class="form-group row justify-content-center">
                <label asp-for="@Model.MovieMod.Title" class="col-sm-2 col-form-label text-center">Title</label>
                <input class="col-sm-3 form-control" placeholder="@Model.MovieMod.Title" asp-for="@Model.MovieMod.Title" type="text" />
                <span class="text-light pl-3" asp-validation-for="@Model.MovieMod.Title"></span>
            </div>
            <div class="form-group row justify-content-center">
                <label asp-for="@Model.MovieMod.Year" class="col-sm-2 col-form-label text-center">Year</label>
                <input class="col-sm-3 form-control" placeholder="@Model.MovieMod.Year" asp-for="@Model.MovieMod.Year" type="text" />
                <span class="text-light pl-3" asp-validation-for="@Model.MovieMod.Year"></span>
            </div>
            <div class="form-group row justify-content-center">
                <label asp-for="@Model.MovieMod.Director" class="col-sm-2 col-form-label text-center">Director</label>
                <input class="col-sm-3 form-control" placeholder="@Model.MovieMod.Director" asp-for="@Model.MovieMod.Director" type="text" />
                <span class="text-light pl-3" asp-validation-for="@Model.MovieMod.Director"></span>
            </div>
            <div class="form-group row justify-content-center">
                <label asp-for="@Model.MovieMod.Rating" class="col-sm-2 col-form-label text-center">Rating</label>
                <select class="col-sm-3 form-select" asp-for="@Model.MovieMod.Rating">
                    <option value="">Select One</option>
                    <option value="G">G</option>
                    <option value="PG">PG</option>
                    <option value="PG-13">PG-13</option>
                    <option value="R">R</option>
                </select>
                <span class="text-light pl-3" asp-validation-for="@Model.MovieMod.Rating"></span>
            </div>
            <div class="form-group row justify-content-center">
                <div class="form-check col-sm-2">
                    <label class="col-form-label text-right" asp-for="@Model.MovieMod.Edited">Edited</label>
                </div>
                <div class="col-sm-3 row justify-content-center text-center">
                    <div class="form-check form-check-inline pl-3 pr-2">
                        <label class="form-check-label pr-2" asp-for="@Model.MovieMod.Edited">Yes  </label>
                        <input class="form-check-input" asp-for="@Model.MovieMod.Edited" type="radio" value="true" />
                    </div>
                    <div class="form-check form-check-inline pr-2">
                        <label class="form-check-label pr-2" asp-for="@Model.MovieMod.Edited">No  </label>
                        <input class="form-check-input" asp-for="@Model.MovieMod.Edited" type="radio" value="false" />
                        <span class="text-light" asp-validation-for="@Model.MovieMod.Edited"></span>
                        <br />
                    </div>
                </div>
            </div>
            <div class="form-group row justify-content-center">
                <label asp-for="@Model.MovieMod.LentTo" class="col-sm-2 col-form-label text-center">Lent To</label>
                <input class="col-sm-3 form-control" asp-for="@Model.MovieMod.LentTo" type="text" />
                <span class="text-light" asp-validation-for="@Model.MovieMod.LentTo"></span>
            </div>
            <div class="form-group row justify-content-center">
                <label asp-for="@Model.MovieMod.Notes" class="col-sm-2 col-form-label text-center">Notes</label>
                <input class="col-sm-3 form-control" asp-for="@Model.MovieMod.Notes" type="text" />
                <span class="text-light pl-3" asp-validation-for="@Model.MovieMod.Notes"></span>
            </div>
        </div>

        <button class="btn btn-danger" type="submit">Submit</button>
    </form>
</div>